<div class="container">

    <h1 class="center-align">Eat-Da-Burger!</h1>
    <div class="row">
        <div class="col s12 l6 offset-l3">
            <img src="img/1506253.jpg" alt="burger_image" class="responsive-img">
        </div>
    </div>

    <h2>Add a Burger</h2>
    <form class="create-form">
        <div class="input-field">
            <i class="material-icons prefix">fastfood</i>
            <input type="text" id="newBurger" name="burger_name" autocomplete="off">
            <label for="newBurger">Burger Name</label>
        </div>
        <div class="input-field center">
            <button class="btn indigo waves-effect waves-light" type="submit">Add Burger</button>
        </div>
    </form>

    <div class="row">
        <div class="col s12 l5">
            <h2>Burgers ready to eat...</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <div class="card hoverable">
                        <div class="card-content">
                            <p class="burger-item">
                                <span>{{id}} - {{burger_name}}</span>
                                <span>
                                    <button class="change-state btn-small pink right-align" data-id="{{id}}"
                                        data-devoured="{{devoured}}">
                                        EAT ME!
                                    </button>
                                </span>
                            </p>

                        </div>

                    </div>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col s12 l5 offset-l2">
            <h2>Burgers devoured!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <div class="card hoverable grey lighten-5">
                        <div class="card-content">
                            <p class="burger-lefthovers">
                                <span>{{id}} - {{burger_name}}</span>
                                {{!-- <span>
                                    <button class="delete btn-small pink right-align" data-id="{{id}}">
                                        CLEAR ME!
                                    </button>
                                </span> --}}
                            </p>
                        </div>
                    </div>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>