<h1>Eat-Da-Burger!</h1>

<h2>Burgers ready to eat</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{id}}
        {{burger_name}}

        <button class="change-state" data-id="{{id}}" data-devoured="{{devoured}}">
            EAT ME!
        </button>
    </li>

    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{id}}
        {{burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="newBurger">Burger Name</label>
        <input type="text" id="newBurger" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
</form>